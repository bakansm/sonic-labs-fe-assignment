{
  "$schema": "https://biomejs.dev/schemas/2.2.0/schema.json",
  "assist": {
    "actions": {
      "recommended": true,
      "source": {
        "organizeImports": "on",
        "recommended": true,
        "useSortedAttributes": "on",
        "useSortedKeys": "on",
        "useSortedProperties": "on"
      }
    },
    "enabled": true
  },
  "files": {
    "ignoreUnknown": true,
    "includes": ["**", "!node_modules", "!.next", "!dist", "!build"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120
  },
  "javascript": {
    "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 2,
      "jsxQuoteStyle": "single",
      "lineWidth": 120,
      "quoteStyle": "single"
    }
  },
  "linter": {
    "domains": {
      "next": "recommended",
      "react": "recommended"
    },
    "enabled": true,
    "rules": {
      "complexity": {
        "noUselessCatch": {
          "fix": "safe",
          "level": "error"
        },
        "noUselessContinue": {
          "fix": "safe",
          "level": "error"
        },
        "noUselessEmptyExport": {
          "fix": "safe",
          "level": "error"
        },
        "noUselessFragments": {
          "fix": "safe",
          "level": "error"
        },
        "recommended": true
      },
      "correctness": {
        "noUnusedImports": {
          "fix": "safe",
          "level": "warn"
        },
        "noUnusedVariables": {
          "fix": "safe",
          "level": "warn"
        },
        "recommended": true,
        "useExhaustiveDependencies": "warn",
        "useHookAtTopLevel": "error"
      },
      "nursery": {
        "noNextAsyncClientComponent": "error",
        "recommended": true,
        "useReactFunctionComponents": "error",
        "useSortedClasses": {
          "fix": "safe",
          "level": "warn",
          "options": {
            "attributes": ["className", "classList"],
            "functions": ["clsx", "cva", "tw", "tw.*", "cn"]
          }
        }
      },
      "performance": {
        "noImgElement": "error",
        "recommended": true
      },
      "recommended": true,
      "style": {
        "recommended": true,
        "useConst": {
          "fix": "safe",
          "level": "warn"
        },
        "useFragmentSyntax": "error"
      },
      "suspicious": {
        "noDuplicateObjectKeys": "error",
        "noUnknownAtRules": "off",
        "noVar": "error",
        "recommended": true
      }
    }
  },
  "vcs": {
    "clientKind": "git",
    "enabled": true,
    "useIgnoreFile": true
  }
}
